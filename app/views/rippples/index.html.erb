<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @rippples.each do |rippple| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= rippple.title %></h2>
        <h6><%= rippple.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(rippple.body).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", rippple_path(rippple) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
